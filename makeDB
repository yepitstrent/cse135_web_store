DROP TABLE IF EXISTS USER;
DROP TABLE IF EXISTS CATEGORIES;

CREATE TABLE USER(
   USER_ID        INT          NOT NULL,
   NAME           TEXT         NOT NULL,
   ROLE 	  INT          NOT NULL,
   AGE		  INT          NOT NULL,
   STATE	  TEXT         NOT NULL,
   PRIMARY KEY(USER_ID)
);

CREATE TABLE CATEGORIES(
   CAT_ID          INT         NOT NULL,
   OWNER_ID        INT         NOT NULL,
   PRIMARY KEY(CAT_ID),
   FORIEGN KEY(OWNER_ID) REFERENCES USER(USER_ID)
);
